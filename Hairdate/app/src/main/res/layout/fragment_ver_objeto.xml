<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenProducto_activityProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="106dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/txt_tituloProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="Producto:"
        android:textSize="17dp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/edTxt_tituloProducto"
        android:layout_width="268dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/rectangle"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="Inserte nombre de producto"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txt_cantidadProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="483dp"
        android:layout_marginEnd="-1dp"
        android:gravity="center"
        android:text="Cantidad:"
        android:textSize="17dp"
        android:typeface="serif" />

    <EditText
        android:id="@+id/edTxt_cantidadProducto"
        android:layout_width="268dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/rectangle"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="Inserte cantidad de producto"
        android:inputType="text"
        android:maxLines="1" />

    <Button
        android:id="@+id/btn_guardarCambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="9dp"
        android:text="Guardar" />

    <Button
        android:id="@+id/btn_productoDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="654dp"
        android:text="Derecha" />

    <Button
        android:id="@+id/btn_productoIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="653dp"
        android:text="<--" />

    <Button
        android:id="@+id/btn_cancelarCambios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="9dp"
        android:text="Cancelar" />

</RelativeLayout>